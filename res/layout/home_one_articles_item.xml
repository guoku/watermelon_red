<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <RelativeLayout
        android:id="@+id/le_layout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/img_article"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        >
        
        <TextView 
            android:id="@+id/article_title"
            style="@style/home_page_item_article_title"
            android:layout_alignParentTop="true"
            android:lineSpacingMultiplier="1.2"
            />
        
        <TextView 
            android:id="@+id/article_below"
            style="@style/home_page_item_article_context"
            android:layout_below="@+id/article_title"
            android:layout_alignParentBottom="true"
            android:lineSpacingMultiplier="1.1"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            />
        
    </RelativeLayout>
    
        <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_article"
        android:layout_width="120dp"
        android:layout_height="100dp"
        fresco:placeholderImage="@color/gray_bg" 
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:background="@color/gray"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        />

</RelativeLayout>
