<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ysyx.outing"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:layoutview="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fafafa"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <ScrollView
        android:id="@+id/faxian_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/psrson_iv_pic"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                fresco:placeholderImage="@drawable/item240"
                fresco:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/psrson_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="name"
                    android:textColor="@color/g_main"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/psrson_iv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/psrson_tv_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="个性"
                android:textColor="@color/black_body" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/psrson_ll_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="关注"
                        android:textColor="@color/g_main" />

                    <TextView
                        android:id="@+id/psrson_tv_guanzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:text="个性"
                        android:textColor="@color/g_red" />
                </LinearLayout>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="14dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/g_line" />

                <LinearLayout
                    android:id="@+id/psrson_ll_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="粉丝"
                        android:textColor="@color/g_main" />

                    <TextView
                        android:id="@+id/psrson_tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:text="个性"
                        android:textColor="@color/g_red" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/psrson_ll_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/tfz_shap"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp" >

                <ImageView
                    android:id="@+id/psrson_iv_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ed"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/psrson_tv_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="编辑个人资料"
                    android:textColor="@color/g_blue" />
            </LinearLayout>

            <com.guoku.guokuv4.view.LayoutItemView
                android:id="@+id/tv_user_like"
                style="@style/therm_tab_title_style"
                android:layout_marginTop="12dp"
                layoutview:textColorLeft="@color/black_body"
                layoutview:textLeft="我的喜爱" >
            </com.guoku.guokuv4.view.LayoutItemView>

            <com.guoku.guokuv4.view.ScrollViewWithGridView
                android:id="@+id/gridview_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:gravity="center"
                android:horizontalSpacing="4dp"
                android:listSelector="#00000000"
                android:numColumns="4"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scrollbars="none"
                android:verticalSpacing="4px" />

            <include
                layout="@layout/line_gray"
                android:background="@color/text_bg_box" />

            <com.guoku.guokuv4.view.LayoutItemView
                android:id="@+id/tv_user_comment"
                style="@style/therm_tab_title_style"
                android:layout_marginTop="10dp"
                layoutview:textColorLeft="@color/black_body"
                layoutview:textLeft="我的点评" >
            </com.guoku.guokuv4.view.LayoutItemView>

            <com.guoku.guokuv4.view.ScrollViewWithListView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/listview_commit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffffff"
                android:divider="@color/g_line"
                android:dividerHeight="1px"
                android:listSelector="@android:color/transparent" >
            </com.guoku.guokuv4.view.ScrollViewWithListView>

            <include
                layout="@layout/line_gray"
                android:background="@color/text_bg_box" />

            <com.guoku.guokuv4.view.LayoutItemView
                android:id="@+id/tv_user_article"
                style="@style/therm_tab_title_style"
                android:layout_marginTop="10dp"
                layoutview:textColorLeft="@color/black_body"
                layoutview:textLeft="我的图文" >
            </com.guoku.guokuv4.view.LayoutItemView>

            <include
                layout="@layout/line_gray"
                android:background="@color/text_bg_box" />

            <com.guoku.guokuv4.view.LayoutItemView
                android:id="@+id/tv_user_tag"
                style="@style/therm_tab_title_style"
                android:layout_marginTop="10dp"
                layoutview:textColorLeft="@color/black_body"
                layoutview:textLeft="我参与的标签" >
            </com.guoku.guokuv4.view.LayoutItemView>

            <include
                layout="@layout/line_gray"
                android:background="@color/text_bg_box" 
                />
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />

            
            <!-- 由于后台接口未完成，所以暂不做此功能 -->
            <com.guoku.guokuv4.view.LayoutItemView
                android:id="@+id/tv_user_article_zan"
                style="@style/therm_tab_title_style"
                android:layout_marginTop="10dp"
                layoutview:textColorLeft="@color/black_body"
                layoutview:textLeft="我赞过的图文" 
                android:visibility="gone"
                >
            </com.guoku.guokuv4.view.LayoutItemView>

            <include
                layout="@layout/line_gray"
                android:background="@color/text_bg_box" 
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>