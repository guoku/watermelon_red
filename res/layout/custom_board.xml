<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/view_gray_bg"
    >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        
        <include layout="@layout/line_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_toRightOf="@+id/tv_share"
            android:layout_centerInParent="true"
            />
        
        
        <TextView 
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_share"
            android:textColor="@color/gray_fzxx"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            />
        
        <include layout="@layout/line_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_toLeftOf="@+id/tv_share"
            android:layout_centerInParent="true"
            />
        
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/share_wx_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" 
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_moment" />

            <TextView
                style="@style/share_popwindos"
                android:text="@string/tv_share_wxpyq" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_wx_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" 
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_wechat" />

            <TextView
                style="@style/share_popwindos"
                android:text="@string/tv_share_wxhy" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_sina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" 
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_weibo" />

            <TextView
                style="@style/share_popwindos"
                android:text="@string/tv_share_sina" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_llq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" 
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_safari" />

            <TextView
                style="@style/share_popwindos"
                android:text="@string/tv_share_ie" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" 
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_mail" />

            <TextView
                style="@style/share_popwindos"
                android:text="@string/tv_share_mail" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/g_line" />
    
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_refresh" />

            <TextView
                style="@style/share_popwindos"
                android:text="@string/tv_share_refresh" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/layout_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_copy" />

            <TextView
                style="@style/share_popwindos"
                android:text="@string/tv_share_copy" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/layout_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_report" />

            <TextView
                style="@style/share_popwindos"
                android:text="@string/tv_share_report" />
        </LinearLayout>
        
        </LinearLayout>
        
        <include layout="@layout/line_gray"/>

        <TextView
           	android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/tv_cancel"
            android:textColor="@color/g_main" 
            android:gravity="center"
            />

</LinearLayout>