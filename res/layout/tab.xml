<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/g_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tab_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/line"
            android:textColor="@color/g_other" 
            android:layout_marginRight="8dp"
            />

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_toLeftOf="@+id/check_box_lyout"
            android:background="@color/g_line" 
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            />

        <CheckBox
            android:id="@+id/check_box_lyout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/laylut_check_box_bg" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/g_line" />

    <GridView
        android:id="@+id/tab_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff8f8f8"
        android:cacheColorHint="#00000000"
        android:gravity="center"
        android:horizontalSpacing="2px"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:padding="4px"
        android:paddingTop="12dp"
        android:scrollbars="none"
        android:verticalSpacing="2px" >
    </GridView>

    <ListView
        android:id="@+id/tab_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:divider="#000000"
        android:dividerHeight="0px"
        android:numColumns="3"
        android:paddingTop="12dp"
        android:visibility="gone" >
    </ListView>

</LinearLayout>