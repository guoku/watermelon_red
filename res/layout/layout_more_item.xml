<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/product_iv_likes"
        style="@style/layout_width_more"
        android:layout_marginRight="24dp"
        android:src="@drawable/like_gary" 
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/product_tv_comments"
        style="@style/layout_width_more"
        android:layout_marginRight="24dp"
        android:layout_weight="1"
        android:src="@drawable/comment_2" />

    <ImageView
        android:id="@+id/product_tv_mores"
        style="@style/layout_width_more"
        android:layout_marginRight="24dp"
        android:layout_weight="1"
        android:src="@drawable/more_shop" />

</LinearLayout>