<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="center" 
    android:clickable="true"
    >

    <RelativeLayout
        android:id="@+id/layout_ra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/walkthrough_bg" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="果库图文上线"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="对消费者的苛求，衣食住行的洞见。\n生活可以将就，也可以讲究。"
            android:textColor="@color/gray_fzxx" 
            android:lineSpacingExtra="5dp"
            android:textSize="17sp"
            />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:src="@drawable/walkthrough" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_ra"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/walkthrough_below_bt_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="即刻体验"
        android:textColor="@color/white" 
        android:textSize="17sp"
        />

</RelativeLayout>