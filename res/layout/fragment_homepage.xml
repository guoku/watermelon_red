<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40dp" 
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tab_1"
            style="@style/home_page_tab_text"
            android:text="@string/tv_tab_recommend"
            />


        <TextView
            android:id="@+id/tab_2"
            style="@style/home_page_tab_text"
            android:text="@string/tv_tab_commodity"
            />


        <TextView
            android:id="@+id/tab_3"
            style="@style/home_page_tab_text"
            android:text="@string/tv_tab_image_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/cursor"
            style="@style/home_page_tab_img"
            android:background="@drawable/tab_focus" 
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <ImageView
            style="@style/home_page_tab_img"
            android:background="@drawable/tab_focus"
            android:visibility="invisible" 
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <ImageView
            style="@style/home_page_tab_img"
            android:background="@drawable/tab_focus"
            android:visibility="invisible" 
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
    </LinearLayout>

    <include layout="@layout/line_gray"/>
    

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="@color/white"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>