<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_pull_window"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/ll_dynamic"
        style="@style/widget_basic_match"
        android:orientation="horizontal" >

        <ImageView style="@style/widget_basic_wrap" />

        <TextView
            style="@style/widget_basic_wrap"
            android:text="发起动态" />
    </LinearLayout>

    <ImageView
        android:layout_below="@id/ll_dynamic"
        android:id="@+id/iv_view_point"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#aaaaaa" />

    <LinearLayout
        android:id="@+id/ll_challenge"
        style="@style/widget_basic_match"
        android:layout_below="@id/iv_view_point"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView style="@style/widget_basic_wrap" />

        <TextView
            style="@style/widget_basic_wrap"
            android:text="发起挑战" />
    </LinearLayout>

</RelativeLayout>