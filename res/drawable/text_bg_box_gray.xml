<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- text灰色背景线框 -->

    <solid android:color="@color/white" >
    </solid>

    <!-- 圆角度数 -->
    <corners android:radius="5.0dp" />

    <!-- 边框宽度和颜色 -->
    <stroke
        android:width="0.1dp"
        android:color="@color/text_font_color" />

    <!-- 围绕内容距离 -->
    <padding
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp" />

</shape>